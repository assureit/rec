extends base

block content
        table(border=2)
            tr
                th recoveryID
                th nodeID
                th timestamp
                th arguments
                th errorcode
                th output
                th eoutput
            for data,index in item_list
                -var className='list_odd';
                if(index % 2) == 0
                    -className='list_even';
                else
                tr(class='#{className}')
                    td(align='center') #{data.recoveryID}
                    td(align='center') #{data.nodeID}
                    td #{data.timestamp}
                    td(align='center') #{data.arguments}
                    td(align='center') #{data.errorcode}
                    td(align='center') #{data.output}
                    td(align='center') #{data.eoutput}
  
