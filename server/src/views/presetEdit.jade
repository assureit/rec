extends baseEdit

block content
    form(action="/rec#{site}#{url2}", method="post")
          table
            tr
                td presetID
                -if(presetID == '') {
                td 
                    input(type='text', value='#{presetID}', name='presetID', size='80')
                -} else {
                td 
                    input(type='text', value='#{presetID}', name='presetID', size='80', readonly='readonly')
                -}
            tr
                td description
                td 
                    input(type='text', value='#{description}', name='description', size='80')
            tr
                td datatype
                td 
                    input(type='text', value='#{datatype}', name='datatype', size='80')
            tr
                td script
                td 
                    input(type='text', value='#{script}', name='script', size='80')
            tr
                td paramName
                td 
                    input(type='text', value='#{paramName}', name='paramName', size='80')
            tr
                td normalComment
                td 
                    input(type='text', value='#{normalComment}', name='normalComment', size='80')
            tr
                td errorComment
                td 
                    input(type='text', value='#{errorComment}', name='errorComment', size='80')
          table
            tr
                td 
                    input(type='button', value='実行',onclick='editExecute();')
                td &nbsp;&nbsp;
                td 
                    input(type='button', value='戻る',onclick='retList("#{url}");')
                td &nbsp;&nbsp;
                    input(type='text', value='#{editType}', name='editType', style='display:none')
                    input(type='text', value='#{selid}', name='selid', style='display:none')

