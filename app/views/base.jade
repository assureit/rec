extends layout

block header
    form(action="#{url}?#{queryStr}", method="post")
        span(class='title') #{title}
        br
        br
        table
            tr
                td データ数合計&nbsp;#{totalList}件（#{page*limit+1}-#{page*limit+item_list.length}を表示）
                td &nbsp;&nbsp;
                td
                    a(href='#{url}?#{queryStr}') 最新情報に更新
                td &nbsp;&nbsp;
                td  
                    pageCount = (totalList-1)/limit;
                    sOmis = '･･･';
                    eOmis = '･･･';
                    sPage = page - 4;
                    if sPage<=0
                        sPage = 0;
                        sOmis = '';
                    ePage = page + 5;
                    if ePage>=pageCount
                        ePage = pageCount;
                        eOmis = '';
                    if pageCount>1 
                        a(href='#{url}?page=#{1}&#{queryStr}') [先頭]
                        &nbsp;
                        font #{sOmis}
                        -for(var count=sPage ; count<ePage ; count++)
                            if count==page
                                [#{count+1}]&nbsp;
                            else
                                a(href='#{url}?page=#{count+1}&#{queryStr}') [#{count+1}]
                                &nbsp;
                         font #{eOmis}
                         a(href='#{url}?page=#{-1}&#{queryStr}') [最終]
                td &nbsp;&nbsp;
                td 
                    input(type='submit', value='Download')
block content

