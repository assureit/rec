extends base

block content
        table
            tr
                td  location：
                td 
                    select(name="location",id="location")
                        option(value="") ALL
                        each key in location_list
                            option(value="#{key}",selected=key==location) #{key}
                td &nbsp;&nbsp;
                td 
                    input(type='button', onclick='rawDataSort();', value='検索')

        table(border=2)
            tr
                th location
                th type
                th data
                th timestamp
                th context
            for data,index in item_list
                -var className='list_odd';
                if(index % 2) == 0
                    -className='list_even';
                else
                tr(class='#{className}')
                    td #{data.location}
                    td #{data.type}
                    td(align='center') #{data.data}
                    td #{data.timestamp}
                    td #{data.context}
  